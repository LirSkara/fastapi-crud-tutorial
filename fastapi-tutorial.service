[Unit]
Description=FastAPI CRUD Tutorial Service
After=network.target
Wants=network.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/fastapi-crud-tutorial
Environment=PATH=/home/ubuntu/fastapi-crud-tutorial/venv/bin
ExecStart=/home/ubuntu/fastapi-crud-tutorial/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
ExecReload=/bin/kill -s HUP $MAINPID
Restart=always
RestartSec=3
KillMode=mixed
TimeoutStopSec=5

[Install]
WantedBy=multi-user.target
